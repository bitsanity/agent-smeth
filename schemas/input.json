{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "agent-smeth-skill-input",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "intent": { "type": "string", "minLength": 1 },

    "chain": {
      "type": "string",
      "default": "mainnet",
      "description": "mainnet, sepolia, etc."
    },

    "rpc_url": { "type": "string", "minLength": 1 },
    "etherscan_api_url": { "type": "string", "minLength": 1 },
    "etherscan_api_key": { "type": "string", "minLength": 1 },

    "from": { "type": "string", "minLength": 1 },
    "to": { "type": "string", "minLength": 1 },
    "amount": { "type": "string", "minLength": 1 },
    "token": { "type": "string", "minLength": 1 },

    "tx_hash": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]{64}$"
    },

    "payload": {
      "type": "string",
      "description": "Optional JSON string for advanced structured requests."
    }
  },
  "required": ["intent"]
}

